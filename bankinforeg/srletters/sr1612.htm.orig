        <div class="abs_back"><a href="/bankinforeg/srletters/srletters.htm">Back to all SR Letters</a></div>
        

        


        <a name="access"></a>
        <hr>
                               
        <div class="html_letter">
            <div class="left"><img src="/bankinforeg/srletters/seal_bw.gif" alt="Seal of the Board of Governors of the Federal Reserve System" border="0" height="116" hspace="0" vspace="0" width="116"></div>
            <div class="middle">
                <div class="ltrheader" style="padding-top: 1ex;">BOARD OF GOVERNORS</div>
                <div class="ltrheadersm" style="margin-top: 1ex;">OF THE</div>
                <div class="ltrheader" style="margin-top: 1ex;">FEDERAL RESERVE SYSTEM</div>
                <div class="ltrheadersm" style="margin-top: 1.5ex;">WASHINGTON, D.&nbsp;C.&nbsp;&nbsp;20551</div>
            </div><!-- <div class="middle"> -->
